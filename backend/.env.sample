# General
ENVIRONMENT=DEVELOPMENT

# Django settings
DJANGO_SECRET_KEY=insecure-default-key-for-dev
DJANGO_DEBUG=False

# Allow Django to respond to requests from the frontend container
DJANGO_ALLOWED_HOSTS=backend,localhost,127.0.0.1

# CORS: frontend will run on port 3000 inside Docker
CORS_ALLOWED_ORIGINS=http://frontend:3000,http://localhost:3000
